<div class="modal" tabindex="-1" role="dialog" id="dialog-configure-comms" data-backdrop="static">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Comms Configuration</h5>
            </div>
            <div class="modal-body">
                <p>
                    <label><input type="radio" name="comms-transport" value="Serial" data-bind="checked: comms.transport" />Serial</label>
                    <label><input type="radio" name="comms-transport" value="Test" data-bind="checked: comms.transport"/>Test</label>
                </p>
                <p>
                    <label>Serial Port<input data-bind="value: comms.serialPort"/></label>
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bind="click: comms.closeConfigure">Close</button>
                <button type="button" class="btn btn-primary" data-bind="click: comms.saveConfigure">Save changes</button>
            </div>
        </div>
    </div>
</div>