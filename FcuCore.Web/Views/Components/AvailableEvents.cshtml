
<div class="card">
    <div class="card-header">
        Available Events
        
        <!-- ko using: modules.eventsNode -->
        <partial name="/Views/Components/SelectableNode.cshtml"/>
        <!-- /ko -->

    </div>
    <div class="card-body">
            
        <!-- ko if: modules.eventsNode() -->
        <!-- ko foreach: modules.eventsNode().producedEvents -->
        
        <div class="event long-event">
            <div>Node: <span data-bind="text: $parent.nodeNumber"></span>, Event: <span data-bind="text: eventNumber"></span></div>
            <div data-bind="text: name, attr: {title: name}"></div>
        </div>

        <!-- /ko -->
        <!-- /ko -->

        <!-- ko foreach: modules.shortEvents -->
        <div class="event short-event">
            <div>DN: <span data-bind="text: dn"></span></div>
            <div data-bind="text: name, attr: {title: name}"></div>
        </div>
        <!-- /ko -->

    </div>
</div>

